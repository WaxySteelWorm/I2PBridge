<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Default configuration for all domains - no cleartext -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust the default system CAs -->
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
    
    <!-- Specific domain configuration for bridge server -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">bridge.stormycloud.org</domain>
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </domain-config>
    
    <!-- Only allow cleartext for specific local I2P proxy connections -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">127.0.0.1</domain>
        <!-- Restrict to specific I2P proxy ports only -->
        <domain includeSubdomains="false">127.0.0.1:4444</domain>
        <domain includeSubdomains="false">127.0.0.1:6668</domain>
        <domain includeSubdomains="false">127.0.0.1:7660</domain>
        <domain includeSubdomains="false">127.0.0.1:7659</domain>
    </domain-config>
</network-security-config>